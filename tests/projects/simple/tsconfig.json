{
  "compileOnSave": true,

  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "declaration": false,
    "target": "es5",
    "typeRoots": [
       "./node_modules"
    ],
    "types": [
      "node",
      "typescript"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
