{
  "compileOnSave": true,

  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node",
      "typescript"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
