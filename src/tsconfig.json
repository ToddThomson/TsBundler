{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "diagnostics": true,
        "listFiles": false,
        "listEmittedFiles": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "noEmit": false
    },
    "files": [
        "./Bundler/BundleBuilder.ts",
        "./Bundler/BundleCompiler.ts",
        "./Bundler/BundlePackage.ts",
        "./Bundler/BundleParser.ts",
        "./Bundler/BundleResult.ts",
        "./Bundler/DependencyBuilder.ts",
        "./Compiler/CachingCompilerHost.ts",
        "./Compiler/Compiler.ts",
        "./Compiler/CompilerError.ts",
        "./Compiler/CompilerResult.ts",
        "./Compiler/ICompileResult.ts",
        "./Compiler/CompileStream.ts",
        "./Compiler/TsCompilerOptions.ts",
        "./Compiler/WatchCompilerHost.ts",
        "./Project/Glob.ts",
        "./Project/ProjectBuildContext.ts",
        "./Project/ProjectBuildResult.ts",
        "./Project/ProjectConfig.ts",
        "./Project/IProject.ts",
        "./Project/Project.ts",
        "./Project/TsVinylFile.ts",
        "./Reporting/DiagnosticsReporter.ts",
        "./Reporting/Logger.ts",
        "./Reporting/StatisticsReporter.ts",
        "./Utils/Debug.ts",
        "./Utils/EventEmitter.ts",
        "./Utils/TsCore.ts",
        "./Utils/Utilities.ts",
        "./TsBundler.ts"
    ],
    "bundles": {
        "tsBundler": {
            "files": [ "./TsBundler.ts" ],
            "config": {
                "package": "component",
                "packageNamespace": "TsBundler",
                "outDir": "./bundle",
                "minify": false
            }
        }
    }
}