{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "diagnostics": true,
        "listFiles": false,
        "listEmittedFiles": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "noEmit": false
    },
    "files": [
        "./Ast/Ast.ts",

        "./Bundler/BundlerModule.ts",
        "./Bundler/Bundle.ts",
        "./Bundler/BundleBuilder.ts",
        "./Bundler/BundleConfig.ts",
        "./Bundler/BundlePackage.ts",
        "./Bundler/BundleParser.ts",
        "./Bundler/BundleBuildResult.ts",
        "./Bundler/BundlerOptions.ts",
        "./Bundler/DependencyBuilder.ts",
        "./Bundler/ModuleDescriptor.ts",
        "./Bundler/ModuleContainer.ts",
        "./Bundler/PackageType.ts",

        "./Project/BuildStatistics.ts",
        "./Project/BuildStream.ts",
        "./Project/BundleBuilder.ts",
        "./Project/ProjectBuilder.ts",
        "./Project/BuildResult.ts",
        "./Project/ProjectConfig.ts",
        "./Project/Project.ts",
        "./Project/ProjectModule.ts",

        "./Reporting/DiagnosticsReporter.ts",
        "./Reporting/Logger.ts",
        "./Reporting/StatisticsReporter.ts",

        "./Utils/Debug.ts",
        "./Utils/Formatter.ts",
        "./Utils/Glob.ts",
        "./Utils/TsCore.ts",
        "./Utils/TsVinylFile.ts",
        "./Utils/Utilities.ts",

        "./TsBundler.ts"

    ],
    "bundles": {
        "tsbundler": {
            "files": [ "./TsBundler.ts" ],
            "config": {
                "package": "component",
                "packageNamespace": "TsBundler",
                "outDir": "./bundle",
                "minify": false
            }
        }
    }
}